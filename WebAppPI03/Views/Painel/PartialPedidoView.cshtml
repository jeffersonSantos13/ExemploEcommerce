@model IEnumerable<WebAppPI03.Models.Pedido>

<div>
    <h4>Meus Pedidos</h4>
    <hr />
@if (Model != null)
{
    if (Model.Count() > 0)
    {

        <table id="pedidos" class="table table-hover table-inverse">
            <thead>
                <tr>
                    <th>Data</th>
                    <th>Pagamento</th>
                    <th>Status</th>
                    <th>Nome</th>
                    <th>Compra feita por</th>

                </tr>
            </thead>

            @foreach (var item in Model)
            {

                <tbody>

                    <tr>
                        <td scope="row">
                            @item.dataPedido
                        </td>


                        <td scope="row">
                            @item.TipoPagamento.descTipoPagto
                        </td>

                        <td scope="row">
                            @item.StatusPedido.descStatus
                        </td>
                                    
                        <td scope="row">
                            @item.Cliente.nomeCompletoCliente
                        </td>

                        <td scope="row">
                            @item.Aplicacao.DescAplicacao
                        </td>

                    </tr>

                </tbody>

             
            }
        </table>


    
}
}
            </div>
